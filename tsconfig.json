{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "dist", // Diretório onde os arquivos compilados serão colocados
    "rootDir": "./src", // Diretório de origem dos arquivos TypeScript
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".", // Define o diretório base para resolução de módulos
    "inlineSources": true,
    "inlineSourceMap": false,
    "paths": {
      "@Classes/*": [
        "src/classes/*"
      ],
      "@Controllers/*": [
        "src/controllers/*"
      ],
      "@Protocols/*": [
        "src/protocols/*"
      ],
      "@Protocols": [
        "src/protocols/index"
      ],
      "@Utils/*": [
        "src/utils/*"
      ]
    },
  },
}