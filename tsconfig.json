{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "dist", // Diretório onde os arquivos compilados serão colocados
    "rootDir": "./src", // Diretório de origem dos arquivos TypeScript
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".", // Define o diretório base para resolução de módulos
    "paths": {
      "@Adapters/*": [
        "src/adapters/*"
      ],
      "@Modules/*": [
        "src/modules/*"
      ],
      "@Interfaces/*": [
        "src/core/interfaces/*"
      ],
      "@Interfaces": [
        "src/core/interfaces/index"
      ],
      "@Types/*": [
        "src/core/types/*"
      ],
      "@Types": [
        "src/core/types/index"
      ],
      "@Core/*": [
        "src/core/*"
      ],
      "@Utils/*": [
        "src/core/utils/*"
      ]
    },
  },
}